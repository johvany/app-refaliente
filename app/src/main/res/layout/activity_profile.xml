<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi perfil"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@drawable/profile_title_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/profile_img"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@drawable/profile_title_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:padding="0dp"
            app:cardCornerRadius="50dp"
            android:background="@drawable/profile_background_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="#CCCCCC"
                android:src="@drawable/user_no_img"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Publicaciones"
                android:textSize="12sp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Calificación"
                android:textSize="12sp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Perfil"
                android:textSize="12sp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/publications_total"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="0"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/star_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/outline_star_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/star_2"/>

                <View
                    android:id="@+id/star_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/outline_star_24"
                    app:layout_constraintStart_toEndOf="@id/star_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/star_3" />

                <View
                    android:id="@+id/star_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/outline_star_24"
                    app:layout_constraintStart_toEndOf="@id/star_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/star_4" />

                <View
                    android:id="@+id/star_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/outline_star_24"
                    app:layout_constraintStart_toEndOf="@id/star_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/star_5" />

                <View
                    android:id="@+id/star_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/outline_star_24"
                    app:layout_constraintStart_toEndOf="@id/star_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/perfil"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Estándar"
                android:gravity="center"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:id="@+id/name_full"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programmer Software Developer"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_img"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_container"
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/surname_container"
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surname"
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/MyDisabledTextField"
                style="@style/MyDisabledTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/giro_title"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Giro"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <!-- <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/giro_container"
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/giro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout> -->

            <LinearLayout
                android:id="@+id/giro_container"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/select_bg_white"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/business_types"
                    android:gravity="center|start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/rfc_title"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="RFC"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/rfc_container"
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rfc"
                    android:maxLength="15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/enterprise_name_title"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Nombre de la empresa"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enterprise_name_container"
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/enterprise_name"
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telephone"
                    android:maxLength="15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/social_reason_title"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Razón social"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/social_reason_container"
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/social_reason"
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Acerca de mi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/MyNormalTextField"
                style="@style/MyNormalTextField"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/about_me"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="start"
                    android:inputType="textMultiLine"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/save"
                android:layout_gravity="center"
                android:theme="@style/SuccessButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="GUARDAR"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/change_password"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="CAMBIAR CONTRASEÑA"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/upload_business_imgs"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="SUBIR IMÁGENES DEL NEGOCIO"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>