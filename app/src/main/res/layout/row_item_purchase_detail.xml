<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="@drawable/card_body_no_header_dark">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_header_dark"
        android:padding="8dp"
        android:text="Producto #1/1: RIN DEPORTIVO DE ALUMINIO"
        android:textColor="#FF9800"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:background="@drawable/publication_img_background"
            android:padding="4dp"
            android:src="@drawable/missing_img"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Vendedor"
                android:textColor="#FF9800"
                android:textSize="13sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/white"
                android:text="JosÃ© Gomez Santos"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="12dp"
                android:layout_marginVertical="4dp"
                android:background="#CCCCCC"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Precio del producto"
                android:textColor="#FF9800"
                android:textSize="13sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:layout_marginEnd="4dp"
                android:text="$ 10,999.00"
                android:textColor="@color/white"
                android:textSize="@dimen/price_size"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="12dp"
                android:layout_marginVertical="4dp"
                android:background="#CCCCCC"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Cantidad"
                android:textColor="#FF9800"
                android:textSize="13sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:layout_marginEnd="4dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/price_size"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gray_tone_1"
        android:paddingHorizontal="4dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="4dp"
            android:text="Subtotal"
            android:textColor="@color/white"
            android:gravity="center|start"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/summary_subtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/white"
            android:text="$ 999,999,999.99"
            android:textSize="@dimen/price_size"
            android:gravity="center|end"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gray_tone_2"
        android:paddingHorizontal="4dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="4dp"
            android:text="Descuento"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/summary_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/white"
            android:text="$ 999,999,999.99"
            android:textSize="@dimen/price_size"
            android:gravity="center|end"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gray_tone_1"
        android:paddingHorizontal="4dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="4dp"
            android:text="IVA"
            android:textColor="@color/white"
            android:gravity="center|start"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/summary_iva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/white"
            android:text="$ 999,999,999.99"
            android:textSize="@dimen/price_size"
            android:gravity="center|end"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gray_tone_2"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="4dp"
            android:text="Total"
            android:textColor="@color/white"
            android:gravity="center|start"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/summary_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/white"
            android:text="$ 999,999,999.99"
            android:textSize="@dimen/price_size"
            android:gravity="center|end"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>