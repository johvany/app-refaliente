<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/publication_card_small"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="310dp">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/publication_img"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:background="@drawable/publication_img_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/publication_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="FAROS LED DELANTEROS CON PROTECTORES, DE LA MARCA SPYDER AUTO, NEGRO asd asd asd asdad"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/publication_price_old"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="MXN $100.00"
        android:textColor="#E40808"
        android:gravity="center|end"
        android:textSize="@dimen/price_size_small"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/publication_price"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:text="MXN $30.00"
        android:textSize="@dimen/price_size"
        android:layout_marginBottom="8dp"
        android:textColor="#4CAF50"
        tools:ignore="HardcodedText" />

</LinearLayout>