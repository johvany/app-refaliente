<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main app theme -->
    <style name="Theme.Refaliente" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <!-- Custom themes -->
    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="boxBackgroundColor">#4D3A0303</item>
        <item name="boxStrokeErrorColor">@color/login_error</item>
        <item name="errorIconTint">@color/login_error</item>
        <item name="errorTextColor">@color/login_error</item>
    </style>
    <style name="MyNormalTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>
    <style name="MyDisabledTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="boxBackgroundColor">#BBBBBB</item>
        <item name="boxStrokeErrorColor">@color/login_error</item>
        <item name="errorIconTint">@color/login_error</item>
        <item name="errorTextColor">@color/login_error</item>
    </style>
    <style name="Theme.Refaliente.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Refaliente.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/red_700</item>
    </style>
    <style name="Theme.Refaliente.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SuccessButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="BuyRedButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#9B4343</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="FacebookLoginButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#405D9D</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="GoogleLoginButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#AF0000</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>