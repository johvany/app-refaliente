<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- .............. -->
    <!-- DEFAULT THEMES -->
    <!-- .............. -->
    <!-- This is a default theme for night theme -->
    <style name="Theme.BbApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >@color/black</item>
    </style>
    <!-- .............................................................................................. -->
    <!-- .............. -->
    <!-- CUSTOM THEMES -->
    <!-- .............. -->
    <!-- Main application theme -->
    <style name="Theme.BbApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:colorEdgeEffect">@color/red_700</item>
    </style>
    <!-- Custom widgets themes -->
    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="boxBackgroundColor">#6C0909</item>
    </style>

    <style name="LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#BC0F0F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="CalcButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <style name="NewBoxTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">#000000</item>
        <item name="colorOnSurface">#FF5722</item>
        <item name="boxBackgroundColor">#0DFF5722</item>
    </style>

    <style name="SalesReportRadioButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorOnSurface">#000000</item>
        <item name="colorSecondary">#03A9F4</item>
    </style>
    <!-- .............................................................................................. -->
</resources>